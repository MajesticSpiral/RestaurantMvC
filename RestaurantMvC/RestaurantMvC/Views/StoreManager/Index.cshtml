@model IEnumerable<RestaurantMvC.Models.Item>

@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<fieldset>

	<legend>
		Administrator Panel
	</legend>

	<p>
		@Html.ActionLink("Create New", "Create")
	</p>
	<table class="table">
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.ItemName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.ItemPrice)
			</th>
			<th></th>
		</tr>

		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.ItemName)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.ItemPrice)
				</td>
				<td>
					@Html.ActionLink("Edit", "Edit", new { id = item.ItemId }) |
					@Html.ActionLink("Details", "Details", new { id = item.ItemId }) |
					@Html.ActionLink("Delete", "Delete", new { id = item.ItemId })
				</td>
			</tr>
		}

	</table>

	<div>
		<ul id="navlist">
			<li><a href="@Url.Content("~/Home/Index")">Home</a></li>
			<li><a href="@Url.Content("~/Home/About")">About</a></li>
			<li><a href="@Url.Content("~/Home/Contact")">Contact</a></li>
			<li><a href="@Url.Content("~/StoreManager/")">Admin</a></li>
			<li><a href="@Url.Content("~/Reservation/Index")">Reservations</a></li>
			<li><a href="/Menu/">Menu</a></li>
		</ul>
	</div>
</fieldset>



